<div align='center', class='login_haut'>
  <div class='login'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :username, placeholder: 'Username', autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Connection" %>
      </div>
    <% end %>

    <p>  
      <%= render "users/shared/links" %>
    </p>
  </div>
</div>
